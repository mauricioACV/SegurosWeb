@model IEnumerable<Seguros.Web.FrontEnd.Models.Requerimiento>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center; margin-top: 5%;">REQUERIMIENTOS ASIGNADOS</h2>

@using (Html.BeginForm("Index", "Requerimientos/Index", FormMethod.Post))
{
<div class="container" style=" margin: 5%;">
    <div class="form-group container">
        <p class="col-md-2" style=" font-weight: bold;" >EMPLEADO</p>
        <div class="col-md-10">
            @if (ViewBag.EmpleadoList != null)
            {
                @Html.DropDownListFor(model => model.First().Empleado, ViewBag.EmpleadoList as SelectList, "--- Seleccionar Empleado----", new { @class = "form-control" })
            }

        </div>
    </div>

    <div class="form-group container">
        <p class="col-md-2" style=" font-weight: bold;">ESTADO</p>
        <div class="col-md-10">
            @if (ViewBag.EstadoList != null)
            {
                @Html.DropDownListFor(model => model.First().Estado, ViewBag.EstadoList as SelectList, "--- Seleccionar Estado----", new { @class = "form-control" })
            }

        </div>
    </div>

    <div class="container" style="padding-left: 19%;">
        <input id="Submit1" type="submit" value="Aplicar" class="btn btn-primary btn-lg btn-block" />
    </div>
</div>
}

<br>

@if (Model != null)
{
    <table class="table"  style="background: lightgoldenrodyellow;">
        <tr>
            <th>
                ENCARGADO
            </th>
            <th>
                FECHA REQUERIMIENTO
            </th>
            <th>
                ESTADO
            </th>
            <th>
                CLIENTE
            </th>
            <th>
                OBSERVACION
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_req)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nombre)  @Html.DisplayFor(modelItem => item.Cliente.ApellidoPat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Observaciones)
                </td>
            </tr>
        }

    </table>
}

